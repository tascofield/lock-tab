{
  "manifest_version": 2,
  "name": "Tab Lock",
  "version": "0.1",
  "description": "Lets you lock a tab, so you can't accidentally close it",
  
  "permissions": [
    "tabs",
    "menus",
    "scripting",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}